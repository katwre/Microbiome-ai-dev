// Custom resource configuration for limited memory environments

process {
    // Reduce memory for DADA2_ADDSPECIES
    withName: 'NFCORE_AMPLISEQ:AMPLISEQ:DADA2_TAXONOMY_WF:DADA2_ADDSPECIES' {
        memory = 24.GB  // Reduce from 120GB to 24GB
        cpus = 2
    }
    
    // Apply conservative memory limits globally
    memory = { check_max( 8.GB * task.attempt, 'memory' ) }
    cpus = { check_max( 2 * task.attempt, 'cpus' ) }
    time = { check_max( 4.h * task.attempt, 'time' ) }
}

// Allow retries with more resources
process.errorStrategy = { task.exitStatus in [143,137,104,134,139] ? 'retry' : 'finish' }
process.maxRetries = 2
