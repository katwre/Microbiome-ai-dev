# AWS Production Environment
# Copy this to .env and fill in actual values

# Django
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-base64-32
DEBUG=False
DJANGO_SETTINGS_MODULE=mysite.settings_prod
ALLOWED_HOSTS=api.yourdomain.com,your-ec2-ip
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# Database (RDS PostgreSQL)
DATABASE_URL=postgresql://username:password@your-rds-endpoint.us-east-1.rds.amazonaws.com:5432/microbiome_db

# AWS S3
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_STORAGE_BUCKET_NAME=microbiome-uploads-prod
AWS_S3_REGION_NAME=us-east-1

# AWS Batch
AWS_BATCH_JOB_QUEUE=microbiome-job-queue
AWS_BATCH_JOB_DEFINITION=nextflow-ampliseq

# Email (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
